<?xml version="1.0"?>
<!--
    LigAI - Dialplan para chamadas do SIP Trunk
    SOMENTE chamadas outbound são permitidas
-->
<include>
  <context name="public">

    <!-- BLOQUEAR todas as chamadas inbound - sistema é somente outbound -->
    <extension name="block-all-inbound">
      <condition field="destination_number" expression="^(.*)$">
        <action application="log" data="WARNING [LigAI] Chamada INBOUND bloqueada de ${caller_id_number} para ${destination_number}"/>
        <action application="hangup" data="CALL_REJECTED"/>
      </condition>
    </extension>

  </context>
</include>
